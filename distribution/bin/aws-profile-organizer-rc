
LOGDATEFORMAT='+%Y/%m/%d-%H:%M'
__debug=${__debug:-false}

autoload -U awsenv awsprofile _list_profiles _debug _log _error _die 

export AWS_ACCESS_KEY_ID AWS_SECRET_ACCESS_KEY AWS_SESSION_TOKEN

if test -f ~/.awsdefaultenv
then
	awsenv $(cat ~/.awsdefaultenv)
else
	_log "No ~/.awsdefaultenv -- using ~/.aws/[config | credentials]"
	awsenv default
fi

if test -f ~/.awsdefaultprofile
then
	awsprofile $(cat ~/.awsdefaultprofile)
else
	_log "No ~/.awsdefaultprofile -- using default" >&2
	awsprofile default
fi

